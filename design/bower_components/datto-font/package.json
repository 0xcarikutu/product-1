{
  "name": "datto-font",
  "version": "0.0.4",
  "description": "A Bower package for including the Datto font in your project",
  "main": [
    "src/sass/datto-font.scss"
  ],
  "contributors": [
    "John Barreiros <barientos@datto.com>"
  ],
  "license": "UNLICENSED",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github-server.datto.lan:UI-Components/datto-font.git"
  },
  "scripts": {
    "prebuild": "npm run clean",
    "build": "npm run build:sass",
    "postbuild": "npm run minify:sass",
    "start": "npm-run-all --parallel watch:*",
    "clean": "rimraf dist/css/*",
    "build:sass": "node-sass src/sass/datto-font.scss dist/css/datto-font.css",
    "minify:sass": "cleancss -o dist/css/datto-font.min.css dist/css/datto-font.css",
    "watch:sass": "chokidar 'src/sass/*.scss' -c 'npm run build:sass'"
  },
  "devDependencies": {
    "chokidar-cli": "^1.2.0",
    "clean-css": "^3.4.18",
    "node-sass": "^3.8.0",
    "npm-run-all": "^2.3.0",
    "rimraf": "^2.5.2"
  }
}
